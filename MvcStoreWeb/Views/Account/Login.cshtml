@model LoginViewModel
@{
    Layout = "_LayoutEmpty";
    ViewData["title"] = "Kullanıcı Girişi";
}

<div class="h-100 d-flex flex-column align-items-center justify-content-center bg-light">
    <form method="post" novalidate>
        <div class="card shadow ms-login-panel">
            <div class="card-body">
                <div class="text-center">
                    <i class="fa fa-user-circle fa-5x"></i>
                    <h2>Kullanıcı Girişi</h2>
                </div>
                @if (!ViewContext.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary()
                    </div>
                }

                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" asp-for="RememberMe">
                        <label class="custom-control-label" asp-for="RememberMe"></label>
                    </div>
                </div>
                <hr />
                <div class="py-4 text-center">
                    <a asp-controller="Account" asp-action="ResetPassword">Parolamı Yenile</a>
                    |
                    <a asp-controller="Account" asp-action="Register">Yeni Üyelik</a>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Giriş</button>
            </div>
        </div>
        <div class="py-4 text-center">
            <small>&copy;@DateTime.Today.Year - MvcStore - Tüm Hakları Saklıdır</small>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


