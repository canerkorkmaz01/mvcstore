@model Comment
<form id="commentForm" method="post" asp-action="CreateComment">
    <input type="hidden" asp-for="Rate" />
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Rate"></label>
        @for (int i = 1; i <= 5; i++)
        {
            <i class="far fa-star mr-2 text-warning rate-star" data-val="@i"></i>
        }
    </div>
    <button type="submit" class="btn btn-success">Yorum Ekle</button>
</form>